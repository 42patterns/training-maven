<arquillian xmlns="http://jboss.org/schema/arquillian"
            xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:schemaLocation="http://jboss.org/schema/arquillian http://jboss.org/schema/arquillian/arquillian_1_0.xsd">


    <container qualifier="wildfly" default="true">
        <configuration>
            <property name="managementAddress">${wildflyHost}</property>
            <property name="managementPort">${wildflyPort}</property>
            <property name="username">${wildflyAdminUsername}</property>
            <property name="password">${wildflyAdminPassword}</property>
        </configuration>
    </container>

</arquillian>